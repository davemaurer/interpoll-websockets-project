<div class="admin-div">
  <div class="container">
    <div class="title">Admin Page</div>
    <div class="sub-title">Poll: {{ poll.title }}</div>
    <div class="poll-urls">
      <h3>This page's URL (Come here to view your poll results): {{ poll.adminUrl }}</h3>
      <h3>Vote page URL (Send this to the voters): {{ poll.voterUrl }}</h3>
    </div>
    <div class="sub-title">Your Poll Results</div>

    <div class="connection-count"></div>

    <div class="poll-results"></div>

    <div>
      <button class="close-poll btn-sm btn-danger">Close Poll</button>
    </div>
  </div>
</div>

